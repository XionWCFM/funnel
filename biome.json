{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 120
	},
	"files": {
		"ignore": [
			"**/.gitignore",
			"**/.yarn/*",
			"**/.pnp.*",
			"**/.turbo/*",
			"**/build/*",
			"**/coverage/*",
			"**/dist/*",
			"**/.next/*",
			"**/node_modules/*",
			"*storybook.log"
		]
	}
}
